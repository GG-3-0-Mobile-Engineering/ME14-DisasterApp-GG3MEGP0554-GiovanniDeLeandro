<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    app:cardBackgroundColor="?attr/colorTertiary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageBencana"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/deskripsi_konten_image_bencana"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tvTitleBencana"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/maison_neue_light"
                android:textColor="?attr/colorOnPrimary"/>

            <TextView
                android:id="@+id/tvWaktuBencana"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/maison_neue_light"
                android:textColor="?attr/colorOnPrimary"/>

            <TextView
                android:id="@+id/tvDeskripsiBencana"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/maison_neue_light"
                android:textColor="?attr/colorOnPrimary"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>